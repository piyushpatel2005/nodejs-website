<div class="container">
    <%= showAddVideo %>
    <% if (showAddVideo === true) { %> 
    <section class="row row-content">
        <div class="col-md-10 col-md-offset-1">
            <form class="form-horizontal">
                <h3 class="text-center">Add a Video</h3>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">
                        Video Title:
                    </label>
                    <div class="col-sm-10">
                         <input type="text" id="title" name="title" class="form-control" placeholder="Title of Video">
                    </div>
                </div>
                <div class="form-group">
                    <label for="url" class="col-sm-2 control-label">
                        YouTube URL:
                    </label>
                    <div class="col-sm-10">
                        <input type="url" class="form-control" name="url" id="url" placeholder="YouTube URL?">
                    </div>
                </div>
                <div class="form-group">
                    <label for="hour" class="col-md-2 control-label">Hour:</label>
                    <div class="col-md-2">
                        <input class="form-control" type="number" min="0" max="10" name="hour" id="hour" placeholder="Hour">
                    </div>
                    <label for="minute" class="col-md-2 control-label">Minutes:</label>
                    <div class="col-md-2">
                        <input class="form-control" type="number" min="0" max="59" name="minute" id="minute" placeholder="Minutes">
                    </div>
                    <label for="second" class="col-md-2 control-label">Seconds:</label>
                    <div class="col-md-2">
                        <input class="form-control" type="number" min="0" max="59" name="second" id="second" placeholder="Seconds">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button class="btn btn-info">
                            Add Video
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <% } %>
    <section class="row row-content">
        <div class="col-md-12">
            <h3>List of Videos<small class="pull-right">4 stars</small></h3>

            <ol class="list-group">
                <li class="list-group-item">
                    <a href="#" class="list-group-item-heading">Video Title 1 This is tha largest </a>

                    <span class="small pull-right">| <i class="fa fa-calendar"></i> Uploaded a month ago</span>
                    <span class="small pull-right"><i class="fa fa-clock-o"></i> Duration: 1 hour 20 minutes</span>
                </li>
                <li class="list-group-item">
                    <div class="list-group-item-heading">
                        <a href="#">Video Title 1 This is tha largest video </a>
                    </div>
                    <span class="small pull-right">| <i class="fa fa-calendar"></i> Uploaded a month ago</span>
                    <span class="small pull-right"><i class="fa fa-clock-o"></i> Duration: 1 hour 20 minutes</span>
                </li>
            </ol>
        </div>
    </section>
</div>