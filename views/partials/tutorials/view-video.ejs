<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1" ng-controller="VideoController" ng-cloak>
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h4>{{video.title}}</h4>
                </div>
                <div class="panel-body">
                        <iframe width="640" height="400" src="https://www.youtube.com/embed/5bm5tT0bN7c" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
                </div>
                <div class="panel-footer">
                    <span class="small"><i class="fa fa-calendar">
                        </i> Uploaded: {{video.createdOn}}
                    </span>
                    <span class="small">
                        <span class="divider">|</span>
                        <i class="fa fa-clock-o"></i> 
                        Duration: {{video.hour? video.hour + 'hour': ''}} {{video.minutes}} minutes
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
