<form class="form-horizontal" role="form" name="loginForm" ng-controller="LoginFormController" novalidate>
    <div class="form-group"
        ng-class="{'has-error': loginForm.email.$touched && loginForm.email.$invalid,
        'has-success': loginForm.email.$touched && loginForm.email.$valid}">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="abc@example.com" ng-model="formData.email" aria-describedby="emailHelp" email required>
            <span id="emailHelp" class="help-block" ng-show="loginForm.email.$touched && loginForm.email.$invalid">
                <span 
                    ng-show="loginForm.email.$touched && loginForm.email.$error.required">
                    Email address is required.
                </span>
                <span  
                    ng-show-"loginForm.email.$touched && loginForm.email.$invalid">
                    It doesn't look like an email!
                </span>
            </span>
        </div>
    </div>
    <div class="form-group"
        ng-class="{'has-error': loginForm.password.$touched && loginForm.password.$invalid,
        'has-success': loginForm.password.$touched && loginForm.password.$valid}">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control " id="password" name="password" placeholder="Password" ng-model="formData.password" aria-describedby="passwordHelp"
            ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,20}$/" required>
            <span id="passwordHelp" class="help-block" ng-show="loginForm.password.$touched && loginForm.password.$invalid">
                <span ng-show="loginForm.password.$touched && loginForm.password.$error.required">
                    Password is required. 
                </span>
                <span ng-show-"loginForm.password.$touched && loginForm.password.$error.pattern">
                    Password must be at least 8 characters long and must contain at least one uppercase, one lowercase and one digit.
                </span>
            </span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary" ng-disabled="loginForm.$invalid" ng-click="signin(formData)">
                Login
            </button>
        </div>
    </div>
</form>